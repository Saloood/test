local HttpService = game:GetService("HttpService")

local function send(whURL, description, content, fields, color, thumbnail, footer, timeStamp)
    local data = {
        ["content"] = content,
        ["embeds"] = {{
            ["description"] = description,
            ["fields"] = fields,
            ["color"] = color,
            ["thumbnail"] = {
                ["url"] = thumbnail
            },
            ["footer"] = {
                ["text"] = footer
            },
            ["timestamp"] = timeStamp
        }}
    }

    local headers = {
        ["Content-Type"] = "application/json"
    }

    local success, response = pcall(function()
        return HttpService:PostAsync(whURL, HttpService:JSONEncode(data), Enum.HttpContentType.ApplicationJson, false, headers)
    end)

    if success then
        print("ok")
    else
        warn("no: ", response)
    end
end

return send
